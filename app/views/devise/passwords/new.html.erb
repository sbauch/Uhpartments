<div class="container">
  <div class="content">

<div class="page-header">
	
<h2>Forgot your password?</h2>
</div>
<div class="row">
	<div class="span6">
<%= twitter_bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  
  <%= f.email_field :email %>

<center>  <%= f.submit "Send me reset password instructions" %>
<% end %>
</div>
<div class="span6">
<%= render :partial => "devise/shared/links" %>
</div>