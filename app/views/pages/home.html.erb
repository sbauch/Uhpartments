	<script>
function showLocation(position) {
  var latitude = position.coords.latitude;
  var longitude = position.coords.longitude;
                                window.location.href = ('/buildings?utf8=âœ“&lat='+ latitude + '&lon=' + longitude);
                                                               } 
								
function errorHandler(err) {
  if(err.code == 1) {
    alert("We need your location, dummy. Try again.");
  }else if( err.code == 2) {
    alert("We couldn't get your location. Try again. Maybe go outside?");
  }
}
function getLocation(){

   if(navigator.geolocation){
      // timeout at 60000 milliseconds (60 seconds)
      var options = {timeout:60000, enableHighAccuracy: true};
      navigator.geolocation.getCurrentPosition(showLocation, 
                                               errorHandler,
                                               options);
   }else{
      alert("Sorry, browser does not support geolocation!");
   }
}


</script>							
